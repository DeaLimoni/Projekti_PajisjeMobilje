<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/purple_500">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:radius="16dp">

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:maxWidth="200dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/foto2"/>

        <TextView
            android:id="@+id/textView_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_logo"
            android:layout_centerHorizontal="true"
            android:text="FirebaseApp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/textView_main_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_app_name"
            android:layout_centerHorizontal="true"
            android:text="Welcome to Android Firebase App"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_main_head"
            android:background="@android:color/holo_red_dark"
            android:text="Login"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            />

        <TextView
            android:id="@+id/textView_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_login"
            android:text="Do not have an account?"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/textView_register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_register"
            android:text="@string/register"
            android:textAlignment="center"
            android:textColor="@color/purple_700"

           />
    </RelativeLayout>
</ScrollView>
